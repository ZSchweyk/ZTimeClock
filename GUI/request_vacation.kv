<RequestVacation>:
    confirmation_label: confirmation_label
    send_request_btn: send_request_btn
    cancel_request_btn: cancel_request_btn

    Label:
        text: "Please choose the date range for your intended vacation."
        font_size: 15
        halign: "center"
        pos_hint: {"center_x": .5, "center_y": .6}


    MDRoundFlatButton:
        text: "Open Calendar"
        pos_hint: {"center_x": .5, "center_y": .5}
        on_release: root.open_calendar()
        font_size: 30

    Label:
        id: confirmation_label
        font_size: 15
        pos_hint: {"center_x": .5, "center_y": .4}
        halign: "center"

    MDRoundFlatButton:
        id: send_request_btn
        text: "Send"
        pos_hint: {"center_x": .45, "center_y": .3}
        on_release: root.send_request()
        font_size: 30

    MDRoundFlatButton:
        id: cancel_request_btn
        text: "Cancel"
        pos_hint: {"center_x": .55, "center_y": .3}
        on_release: root.cancel_request()
        font_size: 30