<ViewHours>
    date_and_total_day_hours: date_and_total_day_hours
    next_day: next_day

    Label:
        id: date_and_total_day_hours
        pos_hint: {"center_x": .16, "center_y": .7}
        halign: "center"
        font_size: 30

    Label:
        text: 'Time In'
        pos_hint: {"center_x": .06, "center_y": .6}
        halign: "center"
    Label:
        text: 'Time Out'
        pos_hint: {"center_x": .16, "center_y": .6}
        halign: "center"
    Label:
        text: 'Duration'
        pos_hint: {"center_x": .26, "center_y": .6}
        halign: "center"



    MDFillRoundFlatButton:
        text: "<"
        pos_hint: {"center_x": .45, "center_y": .4}
        on_release: root.change_day(-1)
        text_color: (1, 0, 1, 1)
        md_bg_color: (1,1,1,1)
        font_size: 30

    MDFillRoundFlatButton:
        id: next_day
        text: ">"
        pos_hint: {"center_x": .55, "center_y": .4}
        on_release: root.change_day(1)
        text_color: (1, 0, 1, 1)
        md_bg_color: (1,1,1,1)
        font_size: 30


    Label:
        text: 'Date'
        pos_hint: {"center_x": .785, "center_y": .6}
        halign: "center"
    Label:
        text: 'Total Hours'
        pos_hint: {"center_x": .885, "center_y": .6}
        halign: "center"

