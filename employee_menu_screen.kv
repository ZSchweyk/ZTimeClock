<EmployeeMenuScreen>
    name_label: name_label
    clock_in_or_out: clock_in_or_out
    MDLabel:
        id: name_label
        text: ""
        pos_hint: {"center_y": .7}
        halign: "center"
        font_size: 30
        color: "yellow"

    MDRoundFlatButton:
        id: clock_in_or_out
        pos_hint: {"center_x": .5, "center_y": .6}
        font_size: 30
        on_release: root.view_hours(clock_in_out=True)

    MDRoundFlatButton:
        id: view_hours_button
        text: "View Hours"
        pos_hint: {"center_x": .5, "center_y": .5}
        font_size: 30

    MDRoundFlatButton:
        id: view_time_off_button
        text: "View Time Off"
        pos_hint: {"center_x": .5, "center_y": .4}
        font_size: 30

    MDRoundFlatButton:
        id: request_vacation_button
        text: "Request Vacation"
        pos_hint: {"center_x": .5, "center_y": .3}
        font_size: 30


